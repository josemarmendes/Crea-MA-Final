<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:text="id"
        android:textColor="#3F51B5"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:elevation="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/item_id_proprietario"/>
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginBottom="-4dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/item_id_proprietario"
        android:layout_toEndOf="@+id/item_id_proprietario"
        android:layout_alignBottom="@+id/item_id_proprietario">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_nome_proprietario"
        android:text="Nome"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_cpf_proprietario"
        android:text="CPF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingLeft="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item_nome_proprietario" />

    </RelativeLayout>
</RelativeLayout>